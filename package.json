{
  "name": "rest-express",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production ts-node --files -r tsconfig-paths/register ./src",
    "dev": "cross-env NODE_DEBUG=email-templates npx ts-node-dev --files --respawn --inspect -r tsconfig-paths/register ./src",
    "build": "cross-env NODE_ENV=production tsc && tsc-alias && npm run copy:files",
    "rm:public": "rm -rf ./public",
    "copy:files": "cp .env ./public/.env && cp -R ./src/templates ./public",
    "seed": "ts-node --files -r tsconfig-paths/register ./src/seeds",
    "lint": "eslint --debug ./src",
    "lint:fix": "eslint --debug ./src --fix",
    "prettier": "prettier \"**/*.+(js|jsx|json|css|md)\"",
    "prettier:write": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
  },
  "dependencies": {
    "@types/node": "18.14.6",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "email-templates": "^11.0.3",
    "express": "4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "validator": "^13.9.0",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "2.8.13",
    "@types/email-templates": "^10.0.1",
    "@types/express": "4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "18.14.6",
    "@types/nodemailer": "^6.4.7",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  }
}
